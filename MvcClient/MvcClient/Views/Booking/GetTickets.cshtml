@model IEnumerable<MvcClient.Models.Bookings>

@{
    ViewData["Title"] = "Index";
}


    <div class="container-fluid">
        <div class="row justify-content-center">
            <h1>Index</h1>
        </div>
        <a asp-controller="Booking" asp-action="Index" class="btn btn-primary">New Booking</a>
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-md-3 col-sm-3 jumbotron mr-1 mb-1">
                    <h4>Name: @ViewBag.Name</h4>
                    <h4>Booking Id: @item.BookingId</h4>
                    <h4>Number of Seats: @item.NumberOfSeats</h4>
                    <a asp-action="Delete" asp-route-id="@item.BookingId" asp-controller="Booking" class="btn btn-danger">Cancel</a>
                </div>
            }
        </div>
    </div>
